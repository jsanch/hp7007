<h1>Listing flights</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Destination</th>
      <th>Memo</th>
      <th>Status</th>
      <th>Passengers num</th>
      <th>Is reservation</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.date %></td>
        <td><%= flight.time %></td>
        <td><%= flight.destination %></td>
        <td><%= flight.memo %></td>
        <td><%= flight.status %></td>
        <td><%= flight.passengers_num %></td>
        <td><%= flight.is_reservation %></td>
        <td><%= flight.user %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

