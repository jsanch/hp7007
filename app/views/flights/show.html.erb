<%- model_class = Flight -%>
<div class="page-header">
  <h1><%=t '.title', :default => Flight %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:date) %></dt>
      <dd><pre class="prettyprint"><%= @flight.date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:time) %></dt>
      <dd><pre class="prettyprint"><%= @flight.time %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:destination) %></dt>
      <dd><pre class="prettyprint"><%= @flight.destination %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:memo) %></dt>
      <dd><pre class="prettyprint"><%= @flight.memo %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:status) %></dt>
      <dd><pre class="prettyprint"><%= @flight.status %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:passengers_num) %></dt>
      <dd><pre class="prettyprint"><%= @flight.passengers_num %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:is_reservation) %></dt>
      <dd><pre class="prettyprint"><%= @flight.is_reservation %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              flights_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_flight_path(@flight), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              flight_path(@flight),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

